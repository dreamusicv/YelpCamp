<%- include("../partials/header") %>
<div class="container centered">
    <h1>Add New Comment to <%= camp.name%></h1>
    <form action="/campgrounds/<%= camp._id%>/comments" method="POST">
        <input class="form-control" type="text" name="comment[text]" placeholder="Your comment here" >
        <button class="btn btn-primary btn-block">Send</button>
    </form>
    <a href="/campgrounds/<%= camp._id%>">Go Back</a>
</div>


