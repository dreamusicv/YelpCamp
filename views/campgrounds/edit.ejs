<%- include("../partials/header") %>
<div class="container centered">
    <h1>Create a new Campground</h1>
    <form action="/campgrounds/<%= camp._id%>?_method=PUT" method="POST">
        <input class="form-control" type="text" name="blog[name]" placeholder="Camp Name" value="<%= camp.name%>">
        <input class="form-control" type="text" name="blog[description]" placeholder="Camp Description" value="<%= camp.description%>">
        <input class="form-control" type="text" name="blog[image]" placeholder="Camp Image" value="<%= camp.image%>">
        <input class="btn btn-primary btn-lg btn-block" type="submit">
    </form>
    <a href="/campgrounds">Go Back</a>
</div>

<%- include("../partials/footer") %>