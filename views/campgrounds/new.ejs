<%- include("../partials/header") %>
<div class="container centered">
    <h1>Create a new Campground</h1>
    <form action="/campgrounds" method="POST">
        <input class="form-control" type="text" name="name" placeholder="Camp Name" >
        <input class="form-control" type="text" name="description" placeholder="Camp Description">
        <input class="form-control" type="text" name="image" placeholder="Camp Image">
        <input class="btn btn-primary btn-lg btn-block" type="submit">
    </form>
    <a href="/campgrounds">Go Back</a>
</div>


